@model IEnumerable<HeroesAndVillians.Models.Characters>

@{
    ViewBag.Title = "Index";
}

<h2><span class="first">Y</span>our table of Characters</h2>

<p>
    @Html.ActionLink("Add to your Collection", "Create")
</p>
<table class="table">
    <tr>
        @*Display label names for the table fields*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fav)
        </th>
        <th></th>
    </tr>

@*Cycle through the model and display proper field*@
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fav)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
